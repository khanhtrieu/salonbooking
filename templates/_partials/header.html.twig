{% if app.request.get('_route') != 'home' %}
    <div class="row mb-5">

        {% if app.session.get('userid') > 0  %}
            <a href="{{ url('customer_logout') }}" class="btn btn-outline-primary  float-right">
                Logout
            </a>
        {% else %}
            <a href="{{ url('customer_login')}}"  class="btn btn-outline-primary  float-right">
                <i class="material-icons">person</i>
                Login/Signup
            </a>
        {% endif %}
    </div>
{% endif %}