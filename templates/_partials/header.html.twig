{% if app.request.get('_route') != 'home' %}
    <div class="container mt-2">
        <div class="row mb-5">
            <div class="col">
                <a href="http://demo.csufcohort8.live/"><img src="{{ asset('assets/images/web-app-logo.png')}}" class="logo"/></a>
            </div>
            <div class="col pull-right">
                <div class="nav">
                    {% if app.session.get('userid') > 0  %}
                        
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"></path>
                                </svg><span class="sr-only"></span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <a class="dropdown-item" href="{{ url('customer') }}"> Edit profile</a>
                                <a class="dropdown-item" href="{{ url('customer_edit_password') }}"> Change password</a>
                                <a class="dropdown-item" href="{{ url('customer_logout') }}">Logout</a>
                            </ul>
                        </div>
                    {% else %}
                        <a href="{{ url('customer_login')}}"  class="btn btn-outline-primary  float-right">
                            <i class="material-icons">person</i>
                            Login/Signup
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endif %}