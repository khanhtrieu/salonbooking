{% extends 'base.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block body %}
    <h1>Change Password</h1>
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    {# <button type="submit" class="btn btn-primary">Update</button> #}
    
    {{ form_start(changePasswordForm) }}
    <a style="width: 90px"class="btn btn-danger" href="{{ url('customer') }}" class="btn btn-outline-primary">
    Go back
    </a>

    <div class="form-group"> 
        <div class="col-md-8"> 
            {{ form_row(changePasswordForm.email) }}
            {{ form_errors(changePasswordForm.email) }}
        </div>
    </div>
    <div class="form-group"> 
        {{ form_label (changePasswordForm.oldPassword) }}
        <div class="col-md-8"> 
            {{ form_widget(changePasswordForm.oldPassword) }}
            {{ form_errors(changePasswordForm.oldPassword) }}
        </div>
    </div>
    <div class="form-group"> 
        {{ form_label (changePasswordForm.newPassword) }}
        <div class="col-md-8"> 
            {{ form_widget(changePasswordForm.newPassword) }}
            {{ form_errors(changePasswordForm.newPassword) }}
        </div>
    </div>
    
    {# {{ form_label() }} #}
    <button type="submit" class="btn btn-primary">Update</button>
    
    {{ form_end(changePasswordForm) }}
    
{% endblock %}